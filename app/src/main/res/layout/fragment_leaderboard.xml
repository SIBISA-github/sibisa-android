<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.leaderboard.LeaderboardFragment">

    <ImageView
        android:id="@+id/banner_leaderboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_vector_teal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rank1_image"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp"
        android:src="@color/purple_500"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rank3_image"

        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="20dp"
        android:src="@color/purple_500"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/rank1_image"
        app:layout_constraintTop_toTopOf="@id/rank1_image" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rank2_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="20dp"
        android:src="@color/purple_500"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/rank1_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rank1_image" />

    <TextView
        android:id="@+id/text_rank1_number"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rank1_number"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/rank1_image"
        app:layout_constraintStart_toStartOf="@id/rank1_image"
        app:layout_constraintTop_toBottomOf="@id/rank1_image" />

    <TextView
        android:id="@+id/text_rank1_name"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/rank1_image"
        app:layout_constraintStart_toStartOf="@id/rank1_image"
        app:layout_constraintTop_toBottomOf="@id/text_rank1_number" />

    <TextView
        android:id="@+id/text_rank2_number"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rank2_number"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/rank2_image"
        app:layout_constraintStart_toStartOf="@id/rank2_image"
        app:layout_constraintTop_toBottomOf="@id/rank2_image" />

    <TextView
        android:id="@+id/text_rank2_name"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem_ipsum"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/rank2_image"
        app:layout_constraintStart_toStartOf="@id/rank2_image"
        app:layout_constraintTop_toBottomOf="@id/text_rank2_number" />

    <TextView
        android:id="@+id/text_rank3_number"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rank3_number"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/rank3_image"
        app:layout_constraintStart_toStartOf="@id/rank3_image"
        app:layout_constraintTop_toBottomOf="@id/rank3_image" />

    <TextView
        android:id="@+id/text_rank3_name"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/rank3_image"
        app:layout_constraintStart_toStartOf="@id/rank3_image"
        app:layout_constraintTop_toBottomOf="@id/text_rank3_number" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leaderboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_leaderboard" />

    <TextView
        android:id="@+id/text_leaderboard_error"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:gravity="center"
        android:text="@string/text_leaderboard_empty"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>